<%- include("partials/header") -%>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="styling/home.css"/>
<link rel="stylesheet" href="styling/contact-us.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<title>Contact Us</title>
</head>
<body>
    <%- include("partials/navbar") -%>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h4>Get in touch:</h4>
            <form action="/contact" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Contact Number</label>
                    <input type="tel" name="phone" class="form-control" id="phone" placeholder="Enter your number">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Tell us more..</label>
                    <textarea class="form-control" name="message" id="message" rows="5" placeholder="Write your message here"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-lg-6">
            <h4>Contact Us:</h4>
            <div class="mt-3">
                <div class="d-flex mb-3">
                    <i class="bi bi-geo-alt-fill me-2"></i>
                    <p class="mb-0">Address: Gandipet, Hyderabad, Telangana, 500 075
                    </p>
                </div>
                <hr style="border-top: 1px solid black; margin: 10px 0;">

                <div class="d-flex mb-3">
                    <i class="bi bi-telephone-fill me-2"></i>
                    <p class="mb-0">Contact: 945949453</p>
                </div>
                <hr style="border-top: 1px solid black; margin: 10px 0;">

                <div class="d-flex mb-3">
                    <i class="bi bi-envelope-fill me-2"></i>
                    <p class="mb-0">E-mail: placement_cell@cbit.ac.in</p>
                </div>
                <hr style="border-top: 1px solid black; margin: 10px 0;">

                <div class="d-flex">
                    <i class="bi bi-browser-chrome me-2"></i>
                    <p class="mb-0">Official website: www.cbit.ac.in</p>
                </div>
                <hr style="border-top: 1px solid black; margin: 10px 0;">

            </div>
        </div>
    </div>
</div>


<!-- Footer -->
<%- include("partials/footer") -%>
  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
