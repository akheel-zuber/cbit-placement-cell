    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgb(255, 255, 255, 0.178);
    margin-top: 3rem;
    margin-bottom: 3rem;
    padding-left: 60px ;
    padding-right: 60px ;
    padding-bottom: 20px;
    padding-top: 50px;
    text-align: center;
    border-radius: 30px;
    background: transparent; 
    color: white;
    z-index: 1;
}
.big_card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.178); 
    backdrop-filter: blur(5px); 
    border-radius: 30px; 
    border: 1px solid rgba(255, 255, 255, 0.5); 
    z-index: -1; 
    margin-top: 3rem;
   
}
.big_card::before {
    backdrop-filter: none;
}

@media (min-width: 768px) {
    .big_card::before {
        backdrop-filter: blur(5px);
    }
}
